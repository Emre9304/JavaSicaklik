package giris;
import java.sql.SQLOutput;
import java.util.Scanner;
public class class3 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int sicaklik;
        System.out.println("Sıcaklığı giriniz: ");
        sicaklik = input.nextInt();

        if (sicaklik<5){
            System.out.println("Hava"+" "+sicaklik+" Derece. Kayak yapmayı öneriyorum.");
        }

        if (sicaklik>=5 && sicaklik<=15 ){
            System.out.println("Hava"+" "+sicaklik+" Derece. Sinemaya gitmeni öneriyorum.");
        }
        if (sicaklik>=15 && sicaklik<25){
            System.out.println("Hava"+" "+sicaklik+" Derece. Piknik yapmayı öneriyorum.");
        }
        if (sicaklik>=25){
            System.out.println("Hava"+" "+sicaklik+" Derece. Yüzmeyi öneriyorum.");
        }
    }}

